<!--pages/stuPart/historyError/historyError.wxml-->
<view class="allContainer" wx:if="{{errorList.data.length}}">

<!-- 选择题 -->
    <!-- 单选题 -->
    <view class="danxuantiContainer">
    <!-- 单选题 -->
    <view class="danxuantiContainer" wx:if="{{errorList.data[index].queType == '单选'}}">
        <view class="danxuanti">
            <view class="questionType">
                <text class="QTword">单选</text>
            </view>
            <text class="QTitle">{{errorList.data[index].stem}}</text>
        </view>
        <image wx:if="{{errorList.data[index].stemImgone}}" class="stemImg" src="https://img2.baidu.com/it/u=640840283,3198496400&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500"></image>
        <image wx:if="{{errorList.data[index].stemImgtwo}}" class="stemImg" src="https://img2.baidu.com/it/u=640840283,3198496400&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500"></image>
        <view class="titleLine"></view>
        <!-- 四个选项 -->
        <view class="isXuanze" >
            <view class="cancle" bindtap="cancleA" wx:if="{{answer[index] == 'A'}}">
                <text>A</text>
                <text class="cancle_word" >{{errorList.data[index].choiceA}}</text>
            </view>
            <view class="choice" bindtap="chooseA" wx:else>
                <text>A</text>
                <text class="choice_word" >{{errorList.data[index].choiceA}}</text>
            </view>
            <view class="choiceLine"></view>

            <view class="cancle" bindtap="cancleB" wx:if="{{answer[index] == 'B'}}">
                <text>B</text>
                <text class="cancle_word" >{{errorList.data[index].choiceB}}</text>
            </view>
            <view class="choice" bindtap="chooseB" wx:else>
                <text>B</text>
                <text class="choice_word" >{{errorList.data[index].choiceB}}</text>
            </view>
            <view class="choiceLine"></view>
            <view class="cancle" bindtap="cancleC" wx:if="{{answer[index] == 'C'}}">
                <text>C</text>
                <text class="cancle_word" >{{errorList.data[index].choiceC}}</text>
            </view>
            <view class="choice" bindtap="chooseC" wx:else>
                <text>C</text>
                <text class="choice_word" >{{errorList.data[index].choiceC}}</text>
            </view>
            <view class="choiceLine"></view>
    
            <view class="cancle" bindtap="cancleD" wx:if="{{answer[index] == 'D'}}">
                <text>D</text>
                <text class="cancle_word" >{{errorList.data[index].choiceD}}</text>
            </view>
            <view class="choice" bindtap="chooseD"wx:else>
                <text>D</text>
                <text class="choice_word">{{errorList.data[index].choiceD}}</text>
            </view>
        </view>
        <view class="choiceLine"></view>
</view>
<!-- 多选题 -->
<view class="danxuantiContainer" wx:if="{{errorList.data[index].queType == '多选'}}" >
        <view class="danxuanti">
            <view class="questionType1">
                <text class="QTword">多选</text>
            </view>
            <text class="QTitle">{{errorList.data[index].stem}}</text>
        </view>
        <image wx:if="{{errorList.data[index].stemImgone}}" class="stemImg" src="https://img2.baidu.com/it/u=640840283,3198496400&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500"></image>
        <image wx:if="{{errorList.data[index].stemImgtwo}}" class="stemImg" src="https://img2.baidu.com/it/u=640840283,3198496400&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500"></image>
        <view class="titleLine"></view>
<view class="isXuanze" >
 
            
            <view class="choice">
                <text>A</text>
                <text class="choice_word" >{{errorList.data[index].choiceA}}</text>
            </view>
            <view class="choiceLine"></view>
            <view class="choice" >
                <text>B</text>
                <text class="choice_word" >{{errorList.data[index].choiceB}}</text>
            </view>
            <view class="choiceLine"></view>
           
            <view class="choice">
                <text>C</text>
                <text class="choice_word" >{{errorList.data[index].choiceC}}</text>
            </view>
            <view class="choiceLine"></view>
            <view class="choice">
                <text>D</text>
                <text class="choice_word">{{errorList.data[index].choiceD}}</text>
            </view>
            <view class="choiceLine"></view>
        </view>
</view>

<!-- 填空题 -->
<view class="danxuantiContainer" wx:if="{{errorList.data[index].queType == '填空'}}">
        <view class="danxuanti">
            <view class="questionType2">
                <text class="QTword">填空</text>
            </view>
            <text class="QTitle">{{errorList.data[index].stem}}</text>
        </view>
        <image wx:if="{{errorList.data[index].stemImgone}}" class="stemImg" src="https://img2.baidu.com/it/u=640840283,3198496400&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500"></image>
        <image wx:if="{{errorList.data[index].stemImgtwo}}" class="stemImg" src="https://img2.baidu.com/it/u=640840283,3198496400&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500"></image>
        <view class="titleLine"></view>
        
</view>
<!-- 计算题 -->
<view class="danxuantiContainer" wx:if="{{errorList.data[index].queType == '计算'}}">
        <view class="danxuanti">
            <view class="questionType3">
                <text class="QTword">计算</text>
            </view>
            <text class="QTitle">{{errorList.data[index].stem}}</text>
        </view>
        <image wx:if="{{errorList.data[index].stemImgone}}" class="stemImg" src="https://img2.baidu.com/it/u=640840283,3198496400&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500"></image>
        <image wx:if="{{errorList.data[index].stemImgtwo}}" class="stemImg" src="https://img2.baidu.com/it/u=640840283,3198496400&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500"></image>
        <view class="titleLine"></view>
        
</view>
<!-- 问答题 -->
<view class="danxuantiContainer" wx:if="{{errorList.data[index].queType == '问答'}}">
        <view class="danxuanti">
            <view class="questionType4">
                <text class="QTword">问答</text>
            </view>
            <text class="QTitle">{{errorList.data[index].stem}}</text>
        </view>
        <view class="titleLine"></view>
        
</view>
<!-- 编程题 -->
<view class="danxuantiContainer" wx:if="{{errorList.data[index].queType == '编程'}}">
        <view class="danxuanti">
            <view class="questionType5">
                <text class="QTword">编程</text>
            </view>
            <text class="QTitle">{{errorList.data[index].stem}}</text>
        </view>
        <image wx:if="{{errorList.data[index].stemImgone}}" class="stemImg" src="https://img2.baidu.com/it/u=640840283,3198496400&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500"></image>
        <image wx:if="{{errorList.data[index].stemImgtwo}}" class="stemImg" src="https://img2.baidu.com/it/u=640840283,3198496400&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500"></image>
        <view class="titleLine"></view>
        <!-- 答题区 -->
        
</view>
        <!-- 错误答案 -->
        <view class="wrongAnswer">
            <text class="wrongAnswer_title" bindtap="test">我的答案：</text>
            <text>{{errorList.data[index].myAnswer}}</text>
        </view>
        <!-- 正确答案 -->
        <view class="answer">
            <text class="answer_title" bindtap="test">正确答案：</text>
            <text>{{errorList.data[index].answer}}</text>
        </view>
        <!-- 难度和章节 -->
        <view class="difficulty_chapter">
            <text class="DC_title">难度：</text>
            <text>{{errorList.data[index].difficulty}}</text>
            <text class="DC_title1">章节：</text>
            <text>{{errorList.data[index].chaName}}</text>
        </view>
        <!-- 错题解析 -->
        <view class="explain">
        <text class="explain_title">解析：</text>
        <text>{{errorList.data[index].analysis}}</text>
        <image wx:if="{{errorList.data[index].analysisImgone}}" class="analysisImg" src="https://img2.baidu.com/it/u=640840283,3198496400&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500"></image>
        <image wx:if="{{errorList.data[index].analysisImgtwo}}" class="analysisImg" src="https://img2.baidu.com/it/u=640840283,3198496400&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500"></image>
        </view>
        <!-- 切题 -->
        <view class="tailContainer">
            <view class="tailview">
                <view class="piro" bindtap="toPre">
                    <text class="iconfont icon-youjiantou-cu icon-youjiantou-cu"></text>
                    <text class="text_piro" >上一题</text>
                </view>
                <view class="next" bindtap="toNext">   
                    <text class="text_next">下一题</text>
                    <text class="iconfont icon-zuojiantou-cu icon-zuojiantou-cu"></text>
                </view>
            </view>
        </view>
        <!-- 底部导航 -->
        <view class="bottomNavi">
        <text class="iconfont icon-shoucang iconShoucang" bindtap="collect" wx:if="{{!errorList.data[index].isCollect}}"></text>
        <text class="text_shoucang" bindtap="collect" wx:if="{{!errorList.data[index].isCollect}}">收藏</text>
        <text class="iconfont icon-shoucang iconShoucang1" bindtap="no_collect" wx:if="{{errorList.data[index].isCollect}}"></text>
        <text class="text_shoucang" bindtap="no_collect" wx:if="{{errorList.data[index].isCollect}}">收藏</text>
        <text class="iconfont icon-shanchu1 iconShanchu" bindtap="shanchu"></text>
        <text class="text_shanchu" bindtap="shanchu">删除</text>
        <van-dialog id="van-dialog" />

        <text class="iconfont icon-quanbu iconQuanbu" bindtap="quanbu"></text>
        <text class="text_quanbu" bindtap="quanbu">{{index + 1}}/{{errorList.data.length}}</text>
        <van-popup 
        show="{{ show }}"
         bind:close="onClose" 
         position="bottom"
        custom-style="height: 40%;">
        <view class="bigCon">
            <view class="popContainer" wx:for="{{errorList.data}}"  >
                <view class="pop_circle2" data-index="{{index}}" bindtap="chageIndex" wx:if="{{item.isPick == 'false'}}">
                    <text class="pop_timu">{{index + 1}}</text>
                </view>
                <view class="pop_circle1" data-index="{{index}}" bindtap="chageIndex" wx:if="{{item.isPick == 'true'}}">
                    <text class="pop_timu">{{index + 1}}</text>
                </view>
            </view>
        </view>
        </van-popup>
        </view>
    </view>
</view>
<view wx:else>
    <image src="../../../static/images/kong.jpg" class="image_bg" ></image>
</view>