<!--pages/stuPart/myExam/myExam.wxml-->
<van-tabbar active="{{ active }}" bind:change="onChange">
  <van-tabbar-item name="info" icon="/static/images/icon/course.png">信息</van-tabbar-item>
  <van-tabbar-item name="exam" icon="/static/images/icon/exam_select.png">考试</van-tabbar-item>
  <van-tabbar-item name="grade" icon="/static/images/icon/grade.png">成绩</van-tabbar-item>
</van-tabbar>

<view class="titleContainer">
    <text class="title_word">我的考试</text>
    <view class="title_line"></view>
</view>

<view class="pickerContainer">
    <view class="picker">
        <text class="picker_word">学期选择：</text>
        <van-dropdown-menu class="picker_select">
            <van-dropdown-item bind:change="change" value="{{ value }}" options="{{ option }}" />
        </van-dropdown-menu>
    </view>
    <view class="picker_line"></view>
</view>

<wxs module="tools" src="/pages/function.wxs"></wxs>

<!-- 考试 --- 进行中 -->
<view class="exam1Container">
  <text class="exam1_word" bindtap="test">进行中:</text>
  <view class="exam1_layoutContainer">
        <view class="exam1_layout" wx:if="{{item.status == 1}}" wx:for="{{examList.data}}" bindtap="toExamDetail" data-exam="{{item}}">
            <view class="exam1_layout_Container">
                <text class="ELC_word">{{item.curName}}</text>
                <text class="ELC_word1">{{item.schoolTerm}}</text>
                <text class="ELC_word2">{{item.examType}}</text>
                <view class="timeCon">
                    <text class="iconfont icon-rili iconrili"></text>
                    <text class="time_word">{{tools.subStr(item.startTime,0,10)}}</text>
                </view>
                <view class="timeCon1">
                    <text class="iconfont icon-naozhong_o icon-naozhong_o"></text>
                    <text class="time1_word">{{item.duration}}</text>
                    <text class="time1_word">分钟</text>
                </view>
                <view class="scoreCon">
                    <text class="iconfont icon-shijuan icon-shijuan"></text>
                    <text class="score_word">{{item.totalPoint}}</text>
                    <text class="score_word">分</text>
                </view>
            </view>
        </view>
    </view>
</view>
