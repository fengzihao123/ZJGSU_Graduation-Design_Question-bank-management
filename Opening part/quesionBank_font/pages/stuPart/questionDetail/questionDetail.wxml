<!--pages/stuPart/historyError/historyError.wxml-->
<view class="allContainer">

<!-- 选择题 -->
    <!-- 单选题 -->
    <view class="danxuantiContainer">
    <!-- 单选题 -->
    <view class="danxuantiContainer" wx:if="{{errorList.data[0].queType == '单选'}}">
        <view class="danxuanti">
            <view class="questionType">
                <text class="QTword">单选</text>
            </view>
            <text class="QTitle">{{errorList.data[0].stem}}</text>
        </view>
        <view class="titleLine"></view>
        <!-- 四个选项 -->
        <view class="isXuanze" >
            <view class="choice" bindtap="chooseA">
                <text>A</text>
                <text class="choice_word" >{{errorList.data[0].choiceA}}</text>
            </view>
            <view class="choiceLine"></view>

            <view class="choice" bindtap="chooseB" >
                <text>B</text>
                <text class="choice_word" >{{errorList.data[0].choiceB}}</text>
            </view>
            <view class="choiceLine"></view>
            <view class="choice" bindtap="chooseC" >
                <text>C</text>
                <text class="choice_word" >{{errorList.data[0].choiceC}}</text>
            </view>
            <view class="choiceLine"></view>
    
            <view class="choice" bindtap="chooseD">
                <text>D</text>
                <text class="choice_word">{{errorList.data[0].choiceD}}</text>
            </view>
        </view>
        <view class="choiceLine"></view>
</view>
<!-- 多选题 -->
<view class="danxuantiContainer" wx:if="{{errorList.data[0].queType == '多选'}}" >
        <view class="danxuanti">
            <view class="questionType1">
                <text class="QTword">多选</text>
            </view>
            <text class="QTitle">{{errorList.data[0].stem}}</text>
        </view>
        <view class="titleLine"></view>
<view class="isXuanze" >
 
            
            <view class="choice">
                <text>A</text>
                <text class="choice_word" >{{errorList.data[0].choiceA}}</text>
            </view>
            <view class="choiceLine"></view>
            <view class="choice" >
                <text>B</text>
                <text class="choice_word" >{{errorList.data[0].choiceB}}</text>
            </view>
            <view class="choiceLine"></view>
           
            <view class="choice">
                <text>C</text>
                <text class="choice_word" >{{errorList.data[0].choiceC}}</text>
            </view>
            <view class="choiceLine"></view>
            <view class="choice">
                <text>D</text>
                <text class="choice_word">{{errorList.data[0].choiceD}}</text>
            </view>
            <view class="choiceLine"></view>
        </view>
</view>

<!-- 填空题 -->
<view class="danxuantiContainer" wx:if="{{errorList.data[0].queType == '填空'}}">
        <view class="danxuanti">
            <view class="questionType2">
                <text class="QTword">填空</text>
            </view>
            <text class="QTitle">{{errorList.data[0].stem}}</text>
        </view>
        <view class="titleLine"></view>
        
</view>
<!-- 计算题 -->
<view class="danxuantiContainer" wx:if="{{errorList.data[0].queType == '计算'}}">
        <view class="danxuanti">
            <view class="questionType3">
                <text class="QTword">计算</text>
            </view>
            <text class="QTitle">{{errorList.data[0].stem}}</text>
        </view>
        <view class="titleLine"></view>
        
</view>
<!-- 问答题 -->
<view class="danxuantiContainer" wx:if="{{errorList.data[0].queType == '问答'}}">
        <view class="danxuanti">
            <view class="questionType4">
                <text class="QTword">问答</text>
            </view>
            <text class="QTitle">{{errorList.data[0].stem}}</text>
        </view>
        <view class="titleLine"></view>
        
</view>
<!-- 编程题 -->
<view class="danxuantiContainer" wx:if="{{errorList.data[0].queType == '编程'}}">
        <view class="danxuanti">
            <view class="questionType5">
                <text class="QTword">编程</text>
            </view>
            <text class="QTitle">{{errorList.data[0].stem}}</text>
        </view>
        <view class="titleLine"></view>
        <!-- 答题区 -->
        
</view>
        <!-- 正确答案 -->
        <view class="answer">
            <text class="answer_title" bindtap="test">正确答案：</text>
            <text>{{errorList.data[0].answer}}</text>
        </view>
        <!-- 难度和章节 -->
        <view class="difficulty_chapter">
            <text class="DC_title">难度：</text>
            <text>{{errorList.data[0].difficulty}}</text>
            <text class="DC_title1">章节：</text>
            <text>{{errorList.data[0].chaName}}</text>
        </view>
        <!-- 错题解析 -->
        <view class="explain">
        <text class="explain_title">解析：</text>
        <text>{{errorList.data[0].analysis}}</text>
        </view>  
    </view>
</view>